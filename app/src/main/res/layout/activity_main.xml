<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/heartblood"

    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Fitness App"
        android:textColor="#ffffff"
        android:background="#000000"
        android:textSize="40dp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="300dp">


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="buttonPressed"
        android:tag="viewButton"
        android:text="View all Workouts"
        android:background="@drawable/button"
        android:textColor="#ffffff"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="buttonPressed"
        android:tag="updateButton"
        android:text="Update Workout"
        android:background="@drawable/button"
        android:layout_marginTop="10dp"
        android:textColor="#ffffff"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="buttonPressed"
        android:tag="viewButtonFood"
        android:text="Food Schedule"
        android:background="@drawable/button"
        android:layout_marginTop="10dp"
        android:textColor="#ffffff"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="buttonPressed"
        android:tag="updateFoodButton"
        android:text="Update Food Schedule"
        android:background="@drawable/button"
        android:layout_marginTop="10dp"
        android:textColor="#ffffff"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="buttonPressed"
        android:tag="weatherButton"
        android:text="Weather Now"
        android:background="@drawable/button"
        android:layout_marginTop="10dp"
        android:textColor="#ffffff"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="buttonPressed"
        android:tag="recipe"
        android:text="Get the Healthiest Recipies"
        android:background="@drawable/button"
        android:layout_marginTop="10dp"
        android:textColor="#ffffff"/>

    </LinearLayout>
</RelativeLayout>
